@model IEnumerable<BugTracker.MVC.Models.BugViewModel>

@{
    ViewData["Title"] = "Bugs";
}

<h2>Bug List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>ProjectId</th>
            <th>Status</th>
            <th>CreatedOn</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center">No Bugs Found</td>
            </tr>
        }
        else
        {
            foreach (var bug in Model)
            {
                <tr>
                    <td>@bug.Id</td>
                    <td>@bug.Title</td>
                    <td>@bug.ProjectId</td>
                    <td>@bug.Status</td>
                    <td>@bug.CreatedOn.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@bug.Id">View</a> |
                        <a asp-action="Edit" asp-route-id="@bug.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@bug.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
