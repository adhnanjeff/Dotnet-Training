@model IEnumerable<Hostel.MVC.Models.RoomViewModel>

@{
    ViewData["Title"] = "Rooms";
}

<h2>Room List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Room Id</th>
            <th>Staff Id</th>
            <th>Staff Incharge</th>
            <th>Students</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">No Rooms Found</td>
            </tr>
        }
        else
        {
            foreach (var room in Model)
            {
                <tr>
                    <td>@room.Id</td>
                    <td>@room.StaffId</td>
                    <td>@room.StaffName</td>
                    <td>
                        @if (room.StudentNames != null && room.StudentNames.Any())
                        {
                            <ul>
                                @foreach (var student in room.StudentNames)
                                {
                                    <li>@student</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>No Students</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@room.Id">View</a> |
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
