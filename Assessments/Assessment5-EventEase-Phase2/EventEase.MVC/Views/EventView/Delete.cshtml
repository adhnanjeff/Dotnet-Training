@model EventEase.MVC.Models.EventViewModel

@{
    ViewData["Title"] = "Delete Event";
}

<h2>Delete Event</h2>

<h4>Are you sure you want to delete this event?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Desc</dd>

    <dt class="col-sm-2">Event Date</dt>
    <dd class="col-sm-10">@Model.EventDate</dd>

    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location</dd>

    <dt class="col-sm-2">Participants</dt>
    <dd class="col-sm-10">@string.Join(", ", Model.Participants)</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
